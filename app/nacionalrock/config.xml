<?xml version='1.0' encoding='utf-8'?>
<widget id="com.xicnet.nacionalrock" version="5.1" versionCode="51" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Nacional Rock</name>
    <description>
        FM 93.7 Radio Nacional Rock (Argentina)
    </description>
    <author email="mobile@xicnet.com" href="http://xicnet.com/">
        devs @ Xicnet
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="deployment-target" value="7.0"/>
    </platform>
    <engine name="android" spec="~5.1.1" />
    <engine name="ios" spec="~4.1.1" />
    <allow-navigation href="*" />
    <allow-navigation href="https://*/*" />
    <preference name="Orientation" value="portrait" />
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="StatusBarBackgroundColor" value="#ffffff" />
    <preference name="AutoHideSplashScreen" value="true" />
    <preference name="SplashScreenDelay" value="0"/>
    <preference name="FadeSplashScreenDuration" value="0"/>
    <preference name="FadeSplashScreen" value="false"/>
    <preference name="SplashScreen" value="none"/>

    <preference name="webviewbounce" value="false" />
    <preference name="DisallowOverscroll" value="true" />
    <allow-navigation href="http://rnadmin.xicnet.com/*" />
    <engine name="android" spec="~5.1.1" />
</widget>
